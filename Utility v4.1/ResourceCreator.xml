<?xml version="1.0" encoding="utf-8"?>
<Form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:dsp="http://www.gappex.com/sfp/DataSource/Parameters" Ident="ResourceCreator" SegmentType="Admin" PackageIdent="Utility">
	<DataPermissions>
		<string>SuperAdmin</string>
	</DataPermissions>
	<CreatePermissions>
		<string>SuperAdmin</string>
	</CreatePermissions>
	<Buttons>

		<Button xsi:type="FormButton" Ident="SaveButton" TitleResourceKey="SaveButton_Utility" IsSave="true" PlacementType="Top Bottom" ColorType="Primary" IconCssClass="icon-floppy-disk" IsVisible="false" />
		<Button xsi:type="FormButton" Ident="SaveAndNextButton" TitleResourceKey="SaveAndNextButton_Utility" IsSave="true" PlacementType="Top Bottom" ColorType="Primary" IconCssClass="icon-floppy-disk" IsVisible="false" IsStopRedirect="true"/>
		<Button xsi:type="FormButton" Ident="DeleteButton" TitleResourceKey="DeleteButton_Utility" IsSave="false" ColorType="Danger" IsVisible="false" IconCssClass="icon-bin2">
			<Extensions>
				<Extension xsi:type="ConfirmDialogExtension" TitleResourceKey="DeleteDialogTitle_Utility" DescriptionResourceKey="DeleteDialogDescription_Utility" />
			</Extensions>
		</Button>
		<Button xsi:type="BackButton" Ident="BackButton" TitleResourceKey="BackButton_Utility" IconCssClass="icon-undo2" />

	</Buttons>
	<Controls>

		<Control xsi:type="TextBoxControl" Ident="Ident" DataType="String" TitleResourceKey="Ident_Utility" IsReadOnly="true" />
		<Control xsi:type="TextAreaControl" Ident="TextValue" DataType="String" TitleResourceKey="TextValue_Utility" Rows="25" IsReadOnly="true" />
		<Control xsi:type="TextBoxControl" Ident="Group" DataType="String" TitleResourceKey="Group_Utility" IsReadOnly="true" />
		<Control xsi:type="TextBoxControl" Ident="Prefix" DataType="String" TitleResourceKey="Prefix_Utility" IsReadOnly="true" IsVisible="false"/>
		<Control xsi:type="TextBoxControl" Ident="Postfix" DataType="String" TitleResourceKey="Postfix_Utility" IsReadOnly="true" IsVisible="false"/>
				
		<Control xsi:type="DropDownListControl" Ident="LanguageID" DataType="Number" TitleResourceKey="LanguageID_Utility" Default="1" IsReadOnly="true">
			<DataBind>
        <Columns>
          <Column Ident="ID" DataBindType="Value" ></Column>
          <Column Ident="Name" DataBindType="Title"></Column>
        </Columns>
        <SQL>
					SELECT ID, Name
					FROM dbo.Language
					WHERE [State] = @ActiveState
        </SQL>
        <Parameters>
          <dsp:Parameter xsi:type="dsp:ValueParameter" Ident="ActiveState" DataType="Number" Value="1" />
        </Parameters>
      </DataBind>
		</Control>
		
		<Control xsi:type="CheckBoxControl" Ident="ClearAfterSave" DataType="Bool" TitleResourceKey="ClearAfterSave_Utility" Default="1" IsReadOnly="true" />
		<Control xsi:type="CheckBoxControl" Ident="ForceUpdate" DataType="Bool" TitleResourceKey="ForceUpdate_Utility" Default="0" IsReadOnly="true" />

  </Controls>
	<Sections>
		<Section xsi:type="ContentSection" Ident="BasicInformation" TitleResourceKey="BasicInformation_Utility">
			<HTMLTemplate>
				<div class="row">
					<div class="col-md-9">
						<div class="row">
							<div class="col-md-12">
								<div class="form-group">
									<ControlLabel ControlID="Ident"/>
									<Control ID="Ident"/>
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-md-12">
								<div class="form-group">
									<ControlLabel ControlID="TextValue"/>
									<Control ID="TextValue"/>
								</div>
							</div>
						</div>
					</div>
					<div class="col-md-3">
						<div class="row">
							<div class="col-md-12">
								<div class="form-group">
									<ControlLabel ControlID="Group"/>
									<Control ID="Group"/>
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-md-12">
								<div class="form-group">
									<ControlLabel ControlID="LanguageID"/>
									<Control ID="LanguageID"/>
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-md-12">
								<div class="form-group">
									<ControlLabel ControlID="Prefix"/>
									<Control ID="Prefix"/>
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-md-12">
								<div class="form-group">
									<ControlLabel ControlID="Postfix"/>
									<Control ID="Postfix"/>
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-md-12">
								<div class="form-group">
									<Control ID="ClearAfterSave"/>
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-md-12">
								<div class="form-group">
									<Control ID="ForceUpdate"/>
								</div>
							</div>
						</div>
					</div>
				</div>
				
			</HTMLTemplate>
		</Section>
	</Sections>
</Form>